@model PrijaviProblem.Models.Problem

@{
    ViewBag.Title = "Edit";
}
<br />
<h2>Промени.</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="row">

            <div class="col-6">
                <div class="form-group">
                   Слика
                    <div class="col-md-10">
                        <img alt="problemImage" src="@Url.Content("~/img/" + Model.Img)" style="max-height: 250px" />
                        @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    Име на проблемот
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />

                <div class="form-group">
                   Краток опис на проблемот
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control"} })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />

                <div class="form-group">
                    Статус: 
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>

        
        <div class="row">

            <div class="col-6">
                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Зачувај" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div>
                    <br />
                    @Html.ActionLink("Назад кон листата", "Index")
                </div>
            </div>
             
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
