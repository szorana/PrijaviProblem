@model PrijaviProblem.Models.Problem

@{
    ViewBag.Title = "Create";
}

<br />
<h5>Пријавете проблем.</h5>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-6">
                <div class="form-group">
                    Име на проблем
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />
                <div class="form-group">
                    Накратко опишете го проблемот:
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    Прикачете слика:
                    <div class="col-md-10">
                        @*<input type="file" class="form-control" />*@
                        @Html.EditorFor(model => model.Img, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<br />
                <div class="form-group">
                    Статус
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>*@
            </div>


        </div>

        <br />

        <div class="row">

            <div class="col-6">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Пријави" class="btn btn-success" />
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div>
                    @Html.ActionLink("Назад кон листата", "Index")
                </div>
            </div>

        </div>

        
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
